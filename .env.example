# App Configuration
NODE_ENV=development
PORT=3100

# Security
JWT_SECRET=your-secret-key-here

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=your-db-user
DB_NAME=your-db-name

# Redis Cache (Upstash)
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here

# Cache Provider Configuration
# Options: "ioredis" (local/production Redis) | "upstash" (serverless Redis)
CACHE_PROVIDER=ioredis

# Redis Configuration (IORedis) - Para desarrollo local o Redis nativo
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging
LOG_LEVEL=warn
ENABLE_FILE_LOGGING=false
# Niveles disponibles: error, warn, info, debug
# error: Solo errores críticos
# warn: Errores + advertencias
# info: Errores + advertencias + información general
# debug: Todos los logs (solo para desarrollo)
# ENABLE_FILE_LOGGING: false para deshabilitar archivos de log en desarrollo