# App Configuration
NODE_ENV=development
PORT=3100

# Security
JWT_SECRET=your-secret-key-here

# CORS Configuration
# Lista de orígenes permitidos separados por comas (sin espacios)
# Desarrollo: http://localhost:3000,http://localhost:5173,http://localhost:4200
# Producción: https://app.tudominio.com,https://admin.tudominio.com
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=your-db-user
DB_NAME=your-db-name

# Database Seed - Admin User Configuration
# Credenciales del usuario administrador inicial
# Solo se usan durante la inicialización de la base de datos
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Admin123!
ADMIN_NAME=Administrador
ADMIN_LASTNAME=Sistema

# Redis Cache (Upstash)
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here

# Cache Provider Configuration
# Options: "ioredis" (local/production Redis) | "upstash" (serverless Redis)
CACHE_PROVIDER=ioredis

# Redis Configuration (IORedis) - Para desarrollo local o Redis nativo
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging
LOG_LEVEL=warn
ENABLE_FILE_LOGGING=false
# Niveles disponibles: error, warn, info, debug
# error: Solo errores críticos
# warn: Errores + advertencias
# info: Errores + advertencias + información general
# debug: Todos los logs (solo para desarrollo)
# ENABLE_FILE_LOGGING: false para deshabilitar archivos de log en desarrollo